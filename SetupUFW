sudo ufw status
sudo ufw enable
sudo ufw default deny incoming
sudo ufw default deny outgoing
sudo ufw allow out on tun
sudo ufw allow out on tun0
sudo ufw allow out on tun1

sudo ufw allow out on eth0 to 192.168.0.0/24
sudo ufw allow out on eth1 to 192.168.0.0/24
sudo ufw allow out on eth2 to 192.168.0.0/24

sudo ufw allow out on eth0 to 192.168.1.0/24
sudo ufw allow out on eth1 to 192.168.1.0/24
sudo ufw allow out on eth2 to 192.168.1.0/24

sudo ufw allow out on eth0 to 192.168.2.0/24
sudo ufw allow out on eth1 to 192.168.2.0/24
sudo ufw allow out on eth2 to 192.168.2.0/24

sudo ufw allow out on wlan0 to 192.168.0.0/24
sudo ufw allow out on wlan1 to 192.168.0.0/24
sudo ufw allow out on wlan2 to 192.168.0.0/24

sudo ufw allow out on wlan0 to 192.168.1.0/24
sudo ufw allow out on wlan1 to 192.168.1.0/24
sudo ufw allow out on wlan2 to 192.168.1.0/24

sudo ufw allow out on wlan0 to 192.168.2.0/24
sudo ufw allow out on wlan1 to 192.168.2.0/24
sudo ufw allow out on wlan2 to 192.168.2.0/24

ufw allow out on eth0 to <IP>
    104.236.184.10  # DIGITAL
    192.131.44.50    # WHATBOX
    45.32.64.117      # VULTR - OpenVPN Los Angeles
### THIS ALLOWS TO PING OUT ONLY THAT ADDRESS

ufw allow out on eth0 to 104.236.184.10 port 1194 proto udp
ufw allow out on wlan0 to 104.236.184.10 port 1194 proto udp

ufw allow out on eth0 to 104.236.184.10 port 443 proto tcp
ufw allow out on wlan0 to 104.236.184.10 port 443 proto tcp
